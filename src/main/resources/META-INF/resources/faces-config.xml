<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>goToOperatorHomePage</from-outcome>
            <to-view-id>pages/operator/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToSiteManagerHomePage</from-outcome>
            <to-view-id>pages/admin/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToOperatorLoginPage</from-outcome>
            <to-view-id>pages/operator/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToSiteManagerLoginPage</from-outcome>
            <to-view-id>pages/admin/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToInvalidPasswordPage</from-outcome>
            <to-view-id>pages/invalid_password.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToOrderStatisticPage</from-outcome>
            <to-view-id>pages/admin/order-statistic.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToDriversPage</from-outcome>
            <to-view-id>pages/admin/drivers.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToOperatorsPage</from-outcome>
            <to-view-id>pages/admin/operators.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>goToSiteManagersPage</from-outcome>
            <to-view-id>pages/admin/site-managers.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


</faces-config>